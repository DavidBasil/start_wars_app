<!DOCTYPE html>
<html lang="en">
<head>
	<% include partials/head.ejs %>
</head>
<body>
	
	<% include partials/header %>

	<div id="hero-image">
		<h2 id="hero-title"><%= title %></h2>	
	</div>

	<div id="posters-wrapper" class="content-padding clearfix">

		<% for (var i = 0; i < movies.length; i++) { %>
			<div class="poster">
				<img src="/images/<%= movies[i].poster %>" class="img-responsive" alt="" />
				<div class="poster-info-overlay">
					<h3><%= movies[i].title %></h3>	
					<h4>View more <i class="fa fa-arrow-right"></i></h4>
				</div>
			</div>


		<% } %>
			
	</div>

	


<!-- scripts -->
<% include partials/scripts.ejs %>
</body>
</html>
